{
  "schema_version": 1,
  "mixin": [
    "reasonable-sorting.mixins.json"
  ],
  "quilt_loader": {
    "group": "${group}",
    "id": "reasonable-sorting",
    "version": "${version}",
    "name": "Reasonable Sorting",
    "description": "Sorts blocks and items in the creative inventory reasonably.",
    "authors": ["SolidBlock"],
    "contact": {
      "sources": "https://github.com/SolidBlock-cn/reasonable-sorting"
    },
    "license": "LGPLv3",
    "icon": "assets/reasonable-sorting/icon.png",
    "intermediate_mappings": "net.fabricmc:intermediary",
    "environment": "*",
    "entrypoints": {
      "init": [
        "pers.solid.mod.ReasonableSortingQuilt"
      ],
      "modmenu": [
        "pers.solid.mod.ConfigScreen"
      ]
    },
    "depends": [
      {
        "id": "quilt_loader",
        "version": "*"
      },
      {
        "id": "quilt_base",
        "version": "*"
      },
      {
        "id": "minecraft",
        "version": ">=1.18.2"
